<html>
	<head>
		<title>Register Form</title>
	</head>
<body>
	<form action="insert_into.php" method="POST">
		<table>
			<tr>
				<td><input type="text" name="text" required></td>
			</tr>
		</table>
	</form>
</body>
</html>




<?php 
$_POST['text']
 

 if (!empty($text))
{
 	//variables 
	$host = "localhost";
 	$dbUsername = "root";
 	$dbPassword = "";
 	$dbname = "messages";

 	//SQLconnection
 	$conn = new mysqli($host, $dbUsername, $dbPassword, $dbname);
 	$SELECT = "SELECT text from register where text = ? Limit 1";
 	$INSERT = "INSERT INTO register (text) values (?)";

 	$stmt = $conn->prepare($SELECT);
 	$stmt->bind_param("s", $text);
 	$stmt->execute();
 	$stmt->bind_result($text);
 	$stmt->store_result();
 	$rnum = $stmt->num_rows;

 	if ($rnum==0)
 	{
 		$stmt->close();

 		$stmt = $conn->prepare($INSERT);
 		$stmt->bind_param("ssssii", $text);
 		$stmt->execute();
 		echo "Text was send ...";
 	}
 	$stmt->close();
 	$conn->close();
}
 	else
{
 	echo "Field is Required"
	die(); 
}
 ?>
